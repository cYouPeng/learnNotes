package toolsclass;

import java.util.Arrays;
import java.util.Comparator;

public class TestComparable {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Stu[] arr = new Stu[]{
				new Stu(1,"lisi"),
				new Stu(3,"wangwu"),
				new Stu(2,"zhaoliu")
		};
		//使用外部比较器进行排序，优点每次排序都可以采用不同规则，缺点，每次排序都要准备比较器
		//Arrays.sort(arr, (stu1,stu2)->stu1.getId()-stu2.getId());
		//使用内部比较器进行排序，缺点每次排序都采用相同规则，优点每次排序都不需要准备比较器
		Arrays.sort(arr);
		for(Stu s : arr){
			System.out.println(s);
		}
		
	}

}
//使用内部比较器，需要实现Comparable接口实现compareTo方法
class Stu implements Comparable{
	private int id;
	private String name;
	public Stu(int id, String name) {
		super();
		this.id = id;
		this.name = name;
	}
	@Override
	public int compareTo(Object o) {
		// TODO Auto-generated method stub
		Stu stu = (Stu)o;
		return this.id - stu.id;
	}
	@Override
	public String toString() {
		return "Stu [id=" + id + ", name=" + name + "]";
	}
	public int getId() {
		return id;
	}
	public void setId(int id) {
		this.id = id;
	}
	public String getName() {
		return name;
	}
	public void setName(String name) {
		this.name = name;
	}
	
}
