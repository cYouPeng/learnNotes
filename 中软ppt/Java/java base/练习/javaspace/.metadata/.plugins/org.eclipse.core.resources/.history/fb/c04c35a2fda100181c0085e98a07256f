package atm;

public class Atm {
	//当前登录的用户
	User currUser;
	//系统里所有用户的集合
	User[] users;
	//进行系统用户的初始化，整个程序的运行中只能执行1次
	public void init(){
		users = new User[2];//对数组进行定义
		users[0] = new User();//数组的元素是引用类型，所以每个元素也必须要定义，否则会在调用属性时引起NullPointerException错误
		users[0].id = "001";
		users[0].pwd = "111222";
		users[0].name = "李*四";
		users[0].money = 10000;
		users[1] = new User();
		users[1].id = "002";
		users[1].pwd = "666666";
		users[1].name = "张*三";
		users[1].money = 500;
				
	}
	
