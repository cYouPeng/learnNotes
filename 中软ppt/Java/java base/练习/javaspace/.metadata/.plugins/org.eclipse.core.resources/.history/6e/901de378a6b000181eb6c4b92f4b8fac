package io;

import java.io.File;

public class TestFindClass {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String uri = TestFindClass.class.getResource("/").getFile();
		new TestRename().findAllFile(new File(uri));
	}
	
	public void findAllFile(File root){
		if(!root.isDirectory()){
			return;
		}
		File[] files = root.listFiles();
		for(File f : files){
			
			if(f.isDirectory()){
				this.findAllFile(f);
			}
			if(f.isFile()){
				this.rename(f);
			}
		}
	}

}
