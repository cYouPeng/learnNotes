package oop1;

public class RiLi {
	public boolean isRunNian(int year){
		return year%4==0 && year%100!=0 || year%400==0;
	}
	public int getDayNumByYear(int year){
		return isRunNian(year)?366:365;
	}
	public int getDayNumByMonth(int year, int month){
		switch(month){
		case 1:
		case 3:
		case 5:
		case 7:
		case 8:
		case 10:
		case 12: return 31;
		case 4:
		case 6:
		case 9:
		case 11: return 30;
		case 2: return isRunNian(year)?29:28;
		default:
			return -1;
		}
	}
}
