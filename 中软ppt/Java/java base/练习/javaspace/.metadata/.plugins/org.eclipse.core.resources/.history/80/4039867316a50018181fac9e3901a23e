package atm;

import java.util.Scanner;
/**
 * 严禁使用atm类的currUser和users属性
 * @author Administrator
 *
 */
public class Menu {
	Scanner input = new Scanner(System.in);
	
	public void mainMenu(){
		
		System.out.println("输入卡号");
		String id = input.next();
		System.out.println("输入密码");
		String pwd = input.next();
		if(!new Atm().login(id, pwd)){
			System.out.println("卡号不存在或密码错误");
			return ;
		}
		while(true){
			System.out.println("输入操作编号：1-存款 2-取款 3-查看余额 0-退出");
			int sel = input.nextInt();
			switch(sel){
			case 1:
				this.saveMenu();
				break;
			case 2:
				loadMenu();
				break;
			case 3:
				showMenu();
				break;
			case 0:
				this.exitMenu();
				return;
			default:
				System.out.println("输入错误");
			}
		}
	}
	public void exitMenu(){
		System.out.println("byebye");
		new Atm().logout();
	}
	public void saveMenu(){
		System.out.println("请输入存款金额");
		int money = input.nextInt();
		boolean status = new Atm().saveMoney(money);
		if(status){
			System.out.println("成功存入"+money+"元");
			System.out.println("当前余额为"+new Atm().getMoeny()+"元");
		}else{
			System.out.println("执行失败");
		}
	}
	public void loadMenu(){
		
	}
	public void showMenu(){
		
	}
	
	
	
}
