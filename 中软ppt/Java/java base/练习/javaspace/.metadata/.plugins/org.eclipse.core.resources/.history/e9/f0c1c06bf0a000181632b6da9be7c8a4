package string;
/**
 * 控制台输入一组由字母组成的字符，查找所有a的位置
 * @author Administrator
 *
 */
public class Lianxi6 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Lianxi6 lx = new Lianxi6();
		lx.findChar2("fadfsaeafs", 'a');
	}
	
	public void findChar1(String str, char c){
		for(int i=0; i<str.length(); i++){
			if(str.charAt(i)==c){
				System.out.println(i);
			}
		}
	}
	public void findChar2(String str, char c){
//		int fromIndex = 0;
//		while(true){
//			int index = str.indexOf(c, fromIndex);
//			if(index<0){
//				break;
//			}
//			System.out.println(index);
//			fromIndex = index+1;
//		}
		int index = -1;
		while(true){
			index = str.indexOf(c, index+1);
			if(index<0){
				break;
			}
			System.out.println(index);
		}
	}

}
