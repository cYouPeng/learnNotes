package oop1;

public class RiLi {
	int year;
	int month;
	public int getWeekByMonth(){
		int sumDayNum = 0;
		for(int i = 1900; i < year; i++){
			sumDayNum += getDayNumByYear(i);
		}
		for(int i = 1; i < month; i++){
			sumDayNum += getDayNumByMonth(year, i);
		}
		return (sumDayNum+1)%7;
	}
	public void print(){
		int week = getWeekByMonth();
		int site = 0;
		int currNum = getDayNumByMonth(year, month);
		for(int i=0; i<week; i++){
			System.out.print("\t");
			site++;
		}
		for(int i=1; i<=currNum; i++){
			System.out.print(i+"\t");
			site++;
			if(site>=7){
				System.out.println();
				site=0;
			}
		}
	}
	public boolean isRunNian(int y){
		return y%4==0 && y%100!=0 || y%400==0;
	}
	public int getDayNumByYear(int year){
		return isRunNian(year)?366:365;
	}
	public int getDayNumByMonth(int y, int m){
		switch(m){
		case 1:
		case 3:
		case 5:
		case 7:
		case 8:
		case 10:
		case 12: return 31;
		case 4:
		case 6:
		case 9:
		case 11: return 30;
		case 2: return isRunNian(y)?29:28;
		default:
			return -1;
		}
	}
}
