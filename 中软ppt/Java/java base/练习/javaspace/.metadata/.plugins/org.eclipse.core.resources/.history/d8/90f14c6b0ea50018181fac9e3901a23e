package atm;
/**
 * 为程序的业务类，只实现业务功能，不进行任何交互，即不可以出现任何的输入输出代码
 * 需要输出的内容返回给menu类的方法去输出
 * 需要输入的内容，由menu类的方法输入之后以参数传递
 * @author Administrator
 *
 */
public class Atm {
	//当前登录的用户
	User currUser;
	//系统里所有用户的集合
	static User[] users;
	//进行系统用户的初始化，整个程序的运行中只能执行1次
	static{
		users = new User[2];//对数组进行定义
		users[0] = new User("111222","李*四",10000);
		//数组的元素是引用类型，所以每个元素也必须要定义，否则会在调用属性时引起NullPointerException错误
		users[1] = new User("666666","张*三",500);
	
	}
	
	public boolean login(String id,String pwd){
		
		for(User u : users){
			if(u.id.equals(id)&&u.pwd.equals(pwd)){
				currUser = u;
				return true;
			}
		}
		return false;
	}
	/**
	 * 存款
	 * @param money 存入的金额
	 * @return 是否存入成功
	 */
	public boolean saveMoney(double money){
		currUser.money += money;
		return true;
	}
	public boolean loadMoney(double money){
		return true;
	}
	public double getMoeny(){
		return currUser.money;
	}
	
}
